@model BookMe.Domain.Entities.Hotel

@{
    ViewBag.Title = @Model.Name;
}
<div class="row">
    <div class="col-md-4">
        @if (Model.Photos.Count != 0) {
            <img src="@Url.Action("Index","Photo", new {id = Model.Photos.First().PhotoID})" alt="@Model.Name@Model.City.Name" />
        }
    </div>
    <div class="col-md-8">
        <h2>@Model.Name</h2>
        <strong>@Model.City.Name, @Model.City.ZipCode</strong>
    </div>
</div>
@Html.Action("RoomsForSelectedHotel","Room", new { id = @Model.HotelID})

