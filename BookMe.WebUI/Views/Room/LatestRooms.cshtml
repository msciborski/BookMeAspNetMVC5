@using BookMe.Domain.Entities
@model IEnumerable<Room>

@foreach (var room in Model) {
    <div class="col-sm-6 col-md-6">
        <div class="thumbnail">
            @if (room.Photos.Count != 0){
            <img src="@Url.Action("Index", "Photo", new{id = @room.Photos.First().PhotoID})" alt="@room.Name@room.Hotel.Name" />
            }
            else{
            <img src="#" alt="@room.Name@room.Hotel.Name" />
            }
            <div class="caption">
                <h4>@room.Name</h4>
                <h3>@room.Hotel.Name</h3>
                <h3>@room.Hotel.City.Name</h3>
            </div>
        </div>
    </div>
}
